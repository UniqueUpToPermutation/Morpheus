Texture2D    mTexture;
SamplerState mTexture_sampler; // By convention, texture samplers must use the '_sampler' suffix

void main(in float4 ClipPos : SV_Position,
	in float3 WorldPos 		: WORLD_POS,
    in float3 Normal    	: NORMAL,
	in float3 Tangent 	 	: TANGENT,
	in float2 UV	      	: UV0,
    out float4 OutColor 	: SV_Target)
{
    OutColor = mTexture.Sample(mTexture_sampler, UV); 
}